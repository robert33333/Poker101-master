<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/friend_img"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/cat"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/friend_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_placeholder"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/friend_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/friend_img"
        app:layout_constraintBottom_toBottomOf="@id/friend_img"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/friend_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_button"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/friend_img"
        app:layout_constraintRight_toLeftOf="@id/friend_name"
        app:layout_constraintTop_toTopOf="@id/friend_img"
        app:layout_constraintBottom_toBottomOf="@id/friend_img"
        android:layout_marginStart="10dp" />

</android.support.constraint.ConstraintLayout>