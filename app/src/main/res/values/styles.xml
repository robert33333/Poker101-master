<resources>

    <style name="Default" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/colorDefaultText</item>
        <item name="android:buttonStyle">@style/ButtonDefault</item>
        <item name="android:background">@color/colorDefaultBackground</item>
        <item name="android:spinnerStyle">@style/SpinnerDefault</item>
    </style>
    <style name="ButtonDefault" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorDefaultText</item>
        <item name="android:backgroundTint">@color/colorDefaultButton</item>
    </style>
    <style name="SpinnerDefault" parent="Widget.AppCompat.Spinner">
        <item name="android:backgroundTint">@color/colorDefaultButton</item>
    </style>

    <style name="Dark" parent="Theme.AppCompat.NoActionBar">
