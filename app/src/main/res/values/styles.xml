        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:backgroundTint">@color/colorLightButton</item>
    </style>
    <style name="SpinnerLight" parent="Widget.AppCompat.Spinner">
        <item name="android:backgroundTint">@color/colorLightButton</item>
    </style>

</resources>
